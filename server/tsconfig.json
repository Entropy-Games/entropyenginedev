{
    "compilerOptions": {
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noEmit": false,
        "removeComments": true,
        "typeRoots": [
            "./node_modules/@types",
        ],
        "downlevelIteration": true
    },
    "exclude": ["node_modules"]
}